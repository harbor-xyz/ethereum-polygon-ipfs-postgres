{
    "config": {
      "name": "testnet-one-chain-one-actor"
    },
    "chains": [
      {
        "chain": "ethereum",
        "config": {
          "artifactsPath": "./artifacts",
          "deploy": {
            "scripts": "./deploy"
          },
          "afterDeploy": {
            "location": "./afterDeploy"
          }
        }
      }, 
      {
        "chain": "polygon",
        "config": {
          "artifactsPath": "./artifacts",
          "deploy": {
            "scripts": "./deploy"
          },
          "afterDeploy": {
            "location": "./afterDeploy"
          }
        }
      }
    ],
    "offChainActors": [
      {
        "image": "postgres",
